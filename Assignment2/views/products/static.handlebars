<div class="container">
    <div class="row">

        {{#each products}}
        <div class="col-sm-12 col-md-6 col-lg-4" id={{@index}}>
            <div class="card">
                <img class="card-img-top" data-credit="{{credit}}" data-description="{{description}}" id="image-{{@index}}" src="{{img}}" alt="{{name}}">
                <div class="card-body">
                    <h2 class="card-title-{{@index}}">{{name}}</h2>
                        <p class="card-text-{{@index}}" data-price={{price}}>{{brief}}</p>
                        <button data-id="{{@index}}" type="button" class="btn btn-primary" data-toggle="modal">
                            More
                        </button>

                </div>
            </div>
        </div>

        {{/each}}

    </div>


    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"  aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <img id="modal-image" src="..." alt="">
                <div class="image-credit"></div>
                <div class="modal-header">
                    <h3 class="modal-title">...</h3>
                    
                </div>
                <div class="modal-body">
                    <div class="modal-description"></div>
                    <p></p>
                    <div class="modal-price"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>